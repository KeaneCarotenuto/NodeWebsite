<!-- edit post modal -->
<div class="modal fade" id="editPostModal" tabindex="-1" role="dialog" aria-labelledby="editPostModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPostModalLabel">Edit Post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/profile/<%= post.username %>/<%= post._id %>?_method=PUT" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="newTitle" name="title" placeholder="New Title" value="<%= post.title %>">
                    </div>
                    <div class="form-group">
                        <label for="content">Content</label>
                        <textarea class="form-control" id="newContent" name="content" rows="3" placeholder="New Content"><%= post.content %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="fishInfo">Fish Info</label>
                        <row>
                          <div class="col">
                            <label for="species">Species</label>
                            <input type="text" class="form-control" id="species" name="species" placeholder="Species" value="<%= post.fishInfo.species %>" required>
                          </div>
                          <div class="col">
                            <label for="length">Length</label>
                            <input type="number" class="form-control" id="length" name="length" placeholder="Length" value="<%= post.fishInfo.length %>" required>
                          </div>
                          <div class="col">
                            <label for="weight">Weight</label>
                            <input type="number" class="form-control" id="weight" name="weight" placeholder="Weight" value="<%= post.fishInfo.weight %>" required>
                          </div>
                        </row>
                      </div>
                      <div class="form-group">
                        <label for="image">Image</label>
                        <input type="text" class="form-control" id="image" name="image" value="<%= post.image %>"  placeholder="Image URL">
                      </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>